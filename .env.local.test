# Environment Variables for Local Development
# Copy this file to .env.local and fill in your values

# Basic Configuration
NEXT_PUBLIC_BASE_URL="http://localhost:3000"
NEXT_PUBLIC_SITE_NAME="NextGen Sustainable Research Network"

# Database (for full deployment later)
# DATABASE_URL="postgresql://username:password@host:5432/ngsrn_dev"
# DIRECT_URL="postgresql://username:password@host:5432/ngsrn_dev"

# NextAuth (for authentication later)
# NEXTAUTH_URL="http://localhost:3000"
# NEXTAUTH_SECRET="your-development-secret-key"

# Google Analytics 4 (recommended for tracking)
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"

# Feature Flags for Simple Deployment
NEXT_PUBLIC_ENABLE_CMS="false"
NEXT_PUBLIC_ENABLE_AUTH="false"
NEXT_PUBLIC_ENABLE_SEARCH="false"
NEXT_PUBLIC_ENABLE_AI="false"