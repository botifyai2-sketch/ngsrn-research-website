# Environment Variables for Local Development
# Copy this file to .env.local and fill in your values

# Basic Configuration
NEXT_PUBLIC_BASE_URL="http://localhost:3000"


# Google Analytics 4 (for testing)
NEXT_PUBLIC_GA_ID="G-TEST123456789"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here-for-local-development-only"

# Database (SQLite for local development)
DATABASE_URL="file:./dev.db"

# Feature Flags for Simple Deployment
NEXT_PUBLIC_ENABLE_CMS="false"
NEXT_PUBLIC_ENABLE_AUTH="false"
NEXT_PUBLIC_ENABLE_SEARCH="false"
NEXT_PUBLIC_ENABLE_AI="false"